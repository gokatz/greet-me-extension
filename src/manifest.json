{
  "manifest_version": 2,

  "name": "GreetMe",
  "description": "GreetMe",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "index.html",
    "default_title": "Sample"
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
